<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="#FAF0E8"
    tools:context=".CalmMusic">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/backarrow"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:onClick="btn_back"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/main_toolbar"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Calm Music"
            android:fontFamily="@font/playfair_display"
            android:textColor="#522749"
            android:textSize="33dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="-53dp"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="-18dp"
            android:src="@drawable/line_dark" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

       <androidx.appcompat.widget.AppCompatButton
           android:layout_width="160dp"
           android:layout_height="184dp"
           android:background="@drawable/ocean_waves"
           android:layout_marginTop="130dp"
           android:layout_marginLeft="35dp"
           android:text="Ocean Waves"
           android:textAllCaps="false"
           android:gravity="bottom"
           android:textAlignment="center"
           android:paddingBottom="8dp"
           android:fontFamily="@font/playfair_display_black"
           android:textColor="#000000"
           android:textStyle="bold"
           android:textSize="23dp"
           tools:ignore="RtlCompat" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="160dp"
            android:layout_height="184dp"
            android:background="@drawable/rain_drops"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"
            android:text="Rain Drops"
            android:textAllCaps="false"
            android:gravity="bottom"
            android:textAlignment="center"
            android:paddingBottom="8dp"
            android:fontFamily="@font/playfair_display_black"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="23dp"
            tools:ignore="RtlCompat" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="160dp"
            android:layout_height="184dp"
            android:background="@drawable/lake"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"
            android:text="Lake"
            android:textAllCaps="false"
            android:gravity="bottom"
            android:textAlignment="center"
            android:paddingBottom="8dp"
            android:fontFamily="@font/playfair_display_black"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="23dp"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="160dp"
            android:layout_height="184dp"
            android:onClick="onclick_instrumental"
            android:background="@drawable/instrumental_pic"
            android:layout_marginTop="126dp"
            android:layout_marginLeft="230dp"
            android:text="Instrumental"
            android:textAllCaps="false"
            android:gravity="bottom"
            android:textAlignment="center"
            android:fontFamily="@font/playfair_display_black"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="23dp"
            tools:ignore="RtlCompat" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="160dp"
            android:layout_height="184dp"
            android:background="@drawable/nature"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="230dp"
            android:text="Nature"
            android:textAllCaps="false"
            android:gravity="bottom"
            android:textAlignment="center"
            android:paddingBottom="2dp"
            android:fontFamily="@font/playfair_display_black"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="23dp"
            tools:ignore="RtlCompat" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="160dp"
            android:layout_height="184dp"
            android:background="@drawable/flowing_water"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="230dp"
            android:text="Flowing Water"
            android:textAllCaps="false"
            android:gravity="bottom"
            android:textAlignment="center"
            android:paddingBottom="8dp"
            android:fontFamily="@font/playfair_display_black"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="23dp"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/main_toolbar"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Calm Music"
            android:fontFamily="@font/playfair_display"
            android:textColor="#522749"
            android:textSize="33dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="-53dp"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="-18dp"
            android:src="@drawable/line_dark" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        >

        <include
            layout="@layout/main_nav_drawer"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>