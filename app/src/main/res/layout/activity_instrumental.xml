<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wavesbg"
    android:orientation="vertical"
    tools:context=".Instrumental">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/playfair_display_black"
        android:text="Now Playing"
        android:textColor="#522749"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_margin="35dp"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginTop="-40dp"
        android:layout_marginLeft="127dp"
        android:layout_marginBottom="674dp"
        android:src="@drawable/line_dark" />

    <ImageView
        android:id="@+id/exit_btn"
        android:onClick="onclick_exit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="380dp"
        android:layout_marginTop="-728dp"
        android:src="@drawable/outline_close" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@drawable/instru_music"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginBottom="268dp"
        android:fontFamily="@font/lora"
        android:text="Instrumental"
        android:textColor="#011416"
        android:textSize="27sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="-302dp"
        android:layout_marginLeft="60dp"
        android:src="@drawable/ic_baseline_favorite_border_24"/>

    <LinearLayout
        android:layout_width="430dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:padding="8dp">

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="380dp"
            android:layout_height="8dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:thumbTint="#48817E"
            android:thumb="@drawable/seekbar_thumb"/>

        <TextView
            android:id="@+id/player_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="22dp"
            android:fontFamily="@font/lora"
            android:text="00:00"
            android:textColor="#263B58"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/player_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="-25dp"
            android:fontFamily="@font/lora"
            android:text="00:00"
            android:textColor="#263B58"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/bt_rewind"
            android:layout_marginRight="25dp"
            android:src="@drawable/rewind_btn" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/bt_play"
            android:src="@drawable/playbtn" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/bt_pause"
            android:visibility="gone"
            android:src="@drawable/pause_btn" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/bt_fforward"
            android:layout_marginLeft="25dp"
            android:src="@drawable/fastforward_btn" />

    </LinearLayout>

</LinearLayout>